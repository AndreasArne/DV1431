<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/quiz_name_txt"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:hint="Quiz name:" />

        <EditText
            android:id="@+id/course_txt"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="Course:" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/author_txt"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:hint="Author:" />

    </LinearLayout>



    <Button
        android:id="@+id/add_question_btn"
        android:text="ADD QUESTION"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        />


    <ListView
        android:layout_width="fill_parent"
        android:id="@+id/questions_list"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

<!--    <Button
        android:id="@+id/save_quiz_draft_btn"
        android:text="SAVE QUIZ AS DRAFT"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"/>-->

    <Button
        android:id="@+id/save_quiz_btn"
        android:text="SAVE QUIZ"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"/>

</LinearLayout>